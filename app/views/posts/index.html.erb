<h1>All Posts</h1>
<ul>
  <% @posts.each do |post| %>
    <li>
      <strong><%= post.title %></strong>
      <% if user_signed_in? %>
        <p>Author: <%= post.user.name if post.user.present? %></p>
        <p><%= post.content if post.user.present? %></p>
      <% else %>
        <p>No Author Found</p>
      <% end %>
    </li>
  <% end %>
</ul>
